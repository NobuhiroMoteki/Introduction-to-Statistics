   "source": [
    "#### sin(x)の数値積分"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "sum  = 1.999998355065687905\n"
     ]
    }
   ],
   "source": [
    "#積分区間\n",
    "a= 0  # 下限\n",
    "b= math.pi # 上限\n",
    "\n",
    "n= 1000; #分割区間数\n",
    "\n",
    "dx= (b-a)/float(n)\n",
    "\n",
    "sum= 0\n",
    "x= a\n",
    "for i in range(n):\n",
    "    sum += math.sin(x)*dx\n",
    "    x += dx\n",
    "   \n",
    "print(\"sum  = {:.18f}\".format(sum))"
   ]
